{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <h2 class="titre">Liste des Equipes</h2>
                <a class="btn offset-4" href="/equipage" role="button">Gestion Equipage</a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Symbole</th>
            <th scope="col">Vaisseau</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td><a href="{{ path('equipe_show', { 'id': equipe.id }) }}">{{ equipe.id }}</a></td>
                <td>{{ equipe.nom }}</td>
                <td><img style="width: 140px; height: 140px;" src="{{ equipe.imgSymbole }}" class="img-fluid" alt="Responsive image"></td>
                <td><img style="width: 140px; height: 140px;" src="{{ equipe.imgVaisseau }}" class="img-fluid" alt="Responsive image"></td>
                <td>{{ equipe.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipe_show', { 'id': equipe.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('equipe_edit', { 'id': equipe.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn" href="{{ path('admin') }}" role="button">Retour au menu d'administration</a>
{% endblock %}
{% block stylesheets %}
    <style>
        body{
            background: url("http://www.nat-geo.ru/upload/iblock/839/839701e18c8821d2a53b40fc72c9c6b0.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .titre{
            color: greenyellow;
            font-family: 'Orbitron', sans-serif;
            padding-top: 10px;
            padding-bottom: 10px;
            margin-bottom: 30px;
            margin-top: 30px;
        }
        h2
        {
            border: 1px solid black;
            background-color: rgba(0,0,0, 0.7);
            text-align: center;

        }
        .btn{
            border: 1px solid black;
            background-color: rgba(0,0,0,0.98);
            text-align: center;
            margin-bottom: 30px;
            margin-top: 20px;
        }
    </style>
{% endblock %}