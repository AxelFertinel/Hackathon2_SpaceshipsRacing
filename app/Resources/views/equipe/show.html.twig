{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <h2 class="titre">Equipe</h2>
                <a class="btn" href="/equipe">Retour à L'équipe</a>
                <a class="btn " href="{{ path('admin') }}" role="button">Retour au menu d'administration</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-6 offset-3 test">
                <table>
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ equipe.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ equipe.nom }}</td>
                    </tr>
                    <tr>
                        <th>Imgsymbole</th>
                        <td>{{ equipe.imgSymbole }}</td>
                    </tr>
                    <tr>
                        <th>Imgvaisseau</th>
                        <td>{{ equipe.imgVaisseau }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ equipe.description }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('equipe_edit', { 'id': equipe.id }) }}">Edit</a>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

{% endblock %}
