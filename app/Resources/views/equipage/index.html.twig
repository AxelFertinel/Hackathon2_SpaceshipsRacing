{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <h2 class="titre">Les membres d'équipage</h2>
                <div class="col-12">
                    <a class="btn offset-1" href="{{ path('equipage_new') }}" >Ajouter un membre d'équipage</a>
                    <a class="btn" href="/equipe">Gestion de L'équipe</a>
                </div>
            </div>
        </div>
    </div>


    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Photo</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for equipage in equipages %}
            <tr>
                <td><a href="{{ path('equipage_show', { 'id': equipage.id }) }}">{{ equipage.id }}</a></td>
                <td>{{ equipage.nom }}</td>
                <td><img style="height: 150px; width: 150px" src="{{ equipage.photo }}" class="img-fluid" alt="Responsive image"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipage_show', { 'id': equipage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('equipage_edit', { 'id': equipage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn" href="{{ path('admin') }}" role="button">Retour au menu d'administration</a>


{% endblock %}

{% block stylesheets %}
    <style>
        body{
            background: url("https://wallpaperlayer.com/img/2015/7/outer-space-wallpaper-5236-5481-hd-wallpapers.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .titre{
            color: greenyellow;
            font-family: 'Orbitron', sans-serif;
            padding-top: 10px;
            padding-bottom: 10px;
            margin-bottom: 30px;
            margin-top: 30px;
        }
        h2
        {
            border: 1px solid black;
            background-color: rgba(0,0,0, 0.7);
            text-align: center;

        }
        .btn{
            border: 1px solid black;
            background-color: rgba(0,0,0,0.98);
            text-align: center;
            margin-bottom: 30px;
            margin-top: 20px;
        }
    </style>
{% endblock %}